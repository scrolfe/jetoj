<h1>Events#edit</h1>

<p><%= image_tag @event.image.url %></p>

<%= form_for @event do |f| %>
  <% Event.branches.each_key do |branch| %>
    <%= f.label branch %>
    <%= f.radio_button :branch, branch %><br />
  <% end %>

  <%= f.label :name %><br />
  <%= f.text_field :name %><br />
  <%= f.label :image %><br />
  <%= f.file_field :image %><br />
  <%= f.label :description %><br />
  <%= f.text_area :description %><br />
  <%= f.label :date_time %><br />
  <%= f.datetime_select :date_time, {prompt: true, ampm: true}%><br />
  <%= f.fields_for :address do |a| %>
    <%= a.label :street_address %>
    <%= a.text_field :street_address %>
    <%= a.label :city %>
    <%= a.text_field :city %>
    <%= a.label :state %>
    <%= a.text_field :state %>
    <%= a.label :zip %>
    <%= a.number_field :zip %>
  <% end %>
  <%= f.submit 'Update Event' %>
<% end %>

<%= form_for @event, method: :delete do |f| %>
  <%= f.submit 'Delete' %>
<% end %>
