<div class="row border-util">
  <div class="col-md-6 mr-auto ml-auto text-center">
    <%= form_for @event do |f| %>
      <div class="form-check">
        <% Event.branches.each_key do |branch| %>
          <%= f.label branch, class: "form-check-label" %>
          <%= f.radio_button :branch, branch, class: "form-check-input" %>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control-file mr-auto ml-auto" %>
      </div>

      <div class="form-group">
        <%= f.label :name, "Event Name" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_area :description, class: "form-control" %>
      </div>

      <%= f.label :date_time, "Date / Start Time", class: "form-control-label" %>
      <div class="form-inline">
        <%= f.datetime_select :date_time, {prompt: true, ampm: true}, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.fields_for :address do |a| %>
          <%= a.label :street_address %>
          <%= a.text_field :street_address, class: "form-control" %>
          <%= a.label :city %>
          <%= a.text_field :city, class: "form-control" %>
          <%= a.label :state %>
          <%= a.text_field :state, class: "form-control" %>
          <%= a.label :zip %>
          <%= a.number_field :zip, class: "form-control" %>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.submit 'Create', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
