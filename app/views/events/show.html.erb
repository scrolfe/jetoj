<%= render 'layouts/placeholder_nav' %>

<div class="row">
  <div class="col-md-6">
    <h2><%= @event.name %></h2>
    <p><%= image_tag @event.image.url, class: 'img-responsive' %></p>
    <p><%= @event.date_time %></p>
    <p><%= @event.description %></p>
  </div>
  <div class="col-md-6">
    <%= image_tag "https://s3.us-east-2.amazonaws.com/jetoj/map.png", class: 'img-responsive' %>
    <p>
      <%= @event.address['street_address'] %> <%= @event.address['city'] %>, <%= @event.address['state'] %> <%= @event.address['zip'][0,5] %>
    </p>
  </div>
</div>
