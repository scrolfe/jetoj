<div class="menu col-xs-12 col-s-8">
  <%= image_tag("jetoj-horizontal-rule.png", class: "col-xs-12 hr") %>
  <%= link_to "About", static_pages_about_path %>
  <%= link_to "Events", events_path %>
  <%= link_to "Media", media_path %>
  <%= link_to "Blog", posts_path %>

  <% if user_signed_in? %>
    <% if current_user.admin %>
      <%= link_to "Admin", edit_user_registration_path, class: "navlink userlink" %>
    <% else %>
      <%= link_to current_user.email, edit_user_registration_path, class: "navlink userlink" %>
    <% end %>
    <%= link_to "Logout", destroy_user_session_path, class: "navlink userlink", method: :delete %>
  <% end %>
  <%= image_tag("jetoj-horizontal-rule.png", class: "col-xs-12 hr") %>
</div>
