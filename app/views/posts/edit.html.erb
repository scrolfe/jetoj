<div class="row border-util">
  <div class="form-custom col-md-6 mr-auto ml-auto text-center">
    <h2>Edit Post</h2>
    <%= image_tag @post.image.url(:medium), class: "img-fluid" %>

    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control-file" %>
      </div>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Update', class: "btn btn-success" %>
      </div>
    <% end %>

    <%= form_for @post, method: :delete do |f| %>
      <%= f.submit 'Delete', class: "btn btn-warning" %>
    <% end %>
  </div>
</div>
