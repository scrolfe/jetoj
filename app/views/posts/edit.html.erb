<h1>Posts#edit</h1>

<p><%= image_tag @post.image.url(:medium) %></p>

<%= form_for @post do |f| %>
  <%= f.label :image %><br />
  <%= f.file_field :image %><br />
  <%= f.label :title %><br />
  <%= f.text_field :title %><br />
  <%= f.label :body %><br />
  <%= f.text_area :body %><br />
  <%= f.submit 'Update' %>
<% end %>

<%= form_for @post, method: :delete do |f| %>
  <%= f.submit 'Delete' %>
<% end %>
