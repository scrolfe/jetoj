<div class="row border-util">
  <div class="form-custom col-md-6 mr-auto ml-auto text-center">
    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label :image %>
        <%= f.file_field :image, class: "form-control-file mr-auto ml-auto" %>
      </div>

      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Create', class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
