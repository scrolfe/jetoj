<% @chicago_performers.each_with_index |p, i|
  div chicagoPerformers-#{i}
    div p.headshot
    div p.name

  div chicagoPerformers-#{i}
    div p.headshot
    div p.name

$('.chicagoPerformers')
  let indexTracker = 0
