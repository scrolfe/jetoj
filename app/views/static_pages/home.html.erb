<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-xs-12 col-sm-12 col-md-10">
      <div id="mission">
        Jetoj is a music series that makes classical music accessible to all audiences, regardless of opportunity or privilege.
      </div>
    </div>
  </div>

<div class="row d-flex flex-column featured-event">
  <h1><%= @featured_event.name %></h1>
  <%= image_tag @featured_event.image %>
  <%= @featured_event.description %>
</div>

<% #tabs %>
  <div class="nav nav-tabs region-menu region-menu-tabs">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="tab" href="#chicago" role="tab">Chicago</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#minneapolis" role="tab">Minneapolis</a>
    </li>
  </div>

<% #tab content %>
  <div class="tab-content">

    <% # Chicago Tab %>
    <div class="tab-pane active" id="chicago" role="tabpanel">
      <div class="row d-flex justify-content-center">
        <div id="carouselExampleControls" class="carousel slide home-carousel" data-ride="carousel">
          <div class="carousel-inner" role="listbox">
            <% @chicago_performers.each_with_index do |performer, index| %>
              <%= render 'performers/profile', performer: performer, index: index %>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>

    <% # Minneapolis Tab %>
    <div class="tab-pane" id="minneapolis" role="tabpanel">
      <div class="row d-flex justify-content-center">
        <div id="carouselExampleControls2" class="carousel slide home-carousel" data-ride="carousel" data-interval=2000>
          <div class="carousel-inner" role="listbox">
            <% @minneapolis_performers.each_with_index do |performer, index| %>
              <%= render 'performers/profile', performer: performer, index: index %>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
